<% content_for :title, "Goals" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="">
    <h1 class="font-bold text-4xl">Goals</h1>
    <%= render "form", goal: Goal.new %>
  </div>

  <ul  id="goals" class="min-w-full">
    <%= render @goals %>
  </ul>
</div>
