<% content_for :title, "Editing goal" %>

<div class="md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Editing goal</h1>

  <%= render "form", goal: @goal %>

  <%= button_to "Destroy this goal", @goal, method: :delete, class: "mt-2 rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium" %>
  <%= link_to "Back to goals", goals_path, class: "ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
